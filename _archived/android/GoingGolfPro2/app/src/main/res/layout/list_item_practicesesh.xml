<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sun 9/21/2014 — 3.5 hrs, 350 balls"
        android:id="@+id/practicesesh_list_item_title"
        android:editable="false"
        android:layout_marginTop="8dp"
        android:textAppearance="?android:attr/textAppearanceListItem"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Putting — 0.6 hrs, 80 balls\nAround the Green — 0.9 hrs, 100 balls\nApproach the Green — 2.9 hrs, 250 balls"
        android:id="@+id/practicesesh_list_item_golf_skill"
        android:layout_below="@+id/practicesesh_list_item_title"/>

</LinearLayout>